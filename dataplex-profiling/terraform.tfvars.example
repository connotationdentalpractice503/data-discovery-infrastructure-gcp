# Example Terraform variables for Dataplex Data Profile Scans
# Copy this file to terraform.tfvars and customize

# Your GCP Project ID
project_id = "YOUR_PROJECT_ID"

# Dataplex location (should match your BigQuery data location)
location = "us-central1"

# Scan schedule (cron format)
# Default: "0 22 * * *" = 10 PM daily (runs 2 hours before midnight metadata collection)
# Examples:
#   "0 20 * * *"  = 8 PM daily (4 hours before midnight)
#   "0 18 * * *"  = 6 PM daily (6 hours before midnight)
#   "0 */6 * * *" = Every 6 hours
scan_schedule_cron = "0 22 * * *"

# Trigger scans immediately after creation
run_scans_on_create = true

# Tables to create profile scans for
# Add tables you want to automatically profile
tables_to_profile = [
  {
    dataset_id = "your_dataset"
    table_id   = "your_table"
  },
  # Add more tables as needed
]


